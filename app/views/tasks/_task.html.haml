%li.flex-container{id: "#{dom_id(task)}"}
  %p= task.name 
  = link_to "remove", [current_user, task], method: :delete, remote: true
  - unless task.completed
    = link_to "done", done_task_path(task), remote: true, method: :post
    / = form_tag(done_task_path(task), remote: true) do
    /   = check_box_tag :completed
