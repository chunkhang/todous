%h1 Stats

// TODO: Form
= form_tag tasks_graph_index_url,method: :get do
  = label_tag :period, "Timeframe" 
  = select_tag :period, options_for(%w{current previous})
  = label_tag :option, "Range"
  = select_tag :option, options_for(%w{week month year})
  = label_tag :type, "Chart Type"
  = select_tag :type, options_for(%w{bar line pie doughnut})
  = submit_tag "Update"

= public_send("#{@type}_chart", @data, @options)

